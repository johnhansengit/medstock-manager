<% let containerClass
    families.forEach((family) => {
    if (family.name === meditem.family) {
        containerClass = family.class
    }
}) %>

<div id="overlay-top-container" class="<%= containerClass %>">
    <img src="/images/star-outline.svg" alt="" class="star-toggle" id="star-overlay">
    <div id="family-container">
        <%= meditem.family %>
    </div>
    <div id="close-container">
        <p id="close-text">Cancel [X]</p>
    </div>
</div>

<div id="overlay-info-container">
    <div id="name-container">
        <div id="generic-name"><%= meditem.genericName %></div>
    </div>

    <div id="dose-form">
        <%= meditem.dose %>
        <%= meditem.form %>
    </div>

    <div id="units">1 unit = <%= meditem.perUnit %><br>
            par level: <%= meditem.parLevel %> units</div>
</div>

<form id="stock-form" action="/current/<%= meditem._id %>/stock" method="POST">

    <table id="overlay-table">
        <thead>
            <tr>
                <th>Lot No.</th>
                <th>Exp. Date</th>
                <th>Current Stock</th>
                <th>+/- Stock</th>
                <th>Delete Row</th>
            </tr>
        </thead>
    <tbody>
        <% if(meditem.inStock.length > 0) { %>
            <% meditem.inStock.forEach((stock)=> { %>
            <tr>
                <td>
                    <%= stock.lotNo %>
                </td>
                <td>
                    <%= new Date(stock.expDate).toLocaleDateString('en-US', { day: 'numeric', month: 'short' , year: 'numeric'
                        }) %>
                </td>
                <td>
                    <%= stock.stock %>
                </td>
                <td>
                    <button onclick="addStock('<%= stock._id %>', '<%= meditem._id %>')"
                        class="stock-btn">+</button>
                    <button onclick="depleteStock('<%= stock._id %>', '<%= meditem._id %>')"
                        class="stock-btn">-</button>
                </td>
                <td><button id="quick-delete-btn" type="button" onclick="quickDelete('<%= stock._id %>', '<%= meditem._id %>')">Delete</button></td>
            </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="5" id="nothing-in-stock">Nothing in stock. Add stock below.</td>
            </tr>
        <% } %>
            <tr>
                <td><input type="text" name="lotNo" placeholder="New lot no."></td>
                <td><input type="date" name="expDate" value="<%= futureDate %>"></td>
                <td><input type="text" name="stock" placeholder="New stock quantity" required></td>
                <td colspan="2"><button type="submit" id="add-stock-item-btn">Add New Stock</button></td>
            </tr>
            <tr>
                <td></td>
                <td>TOTAL STOCK</td>
                <td><%= meditem.totalStock %></td>
            </tr>
        </tbody>
    </table>

</form>

<div id="notes-container">
    <p>Notes:</p>
    <div id="notes">
        <%= meditem.notes %>
    </div>
</div>

<div id="edit-delete">
    <a href="#" onclick="edit('<%= meditem._id %>')">Edit Item</a>
    <a href="#" onclick="confirmDelete('<%= meditem._id %>')">Delete Item</a>
</div>