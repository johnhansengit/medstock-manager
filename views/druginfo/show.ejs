<%- include('../partials/header') %>

<% if (errorMsg) { %>
    <div id="error-container">
        <h1>Item not found</h1>
        <%= errorMsg %>
    </div>
<% } else { %>

    <div id="druginfo-header">
        <h3>Disclaimers</h3>
        <p>
            This information is sourced automatically from <a href="https://open.fda.gov/" target="_blank">openFDA</a>, an API (Application Program Interface) connecting users to a database of drug and medical device information maintained by the Food and Drug Administration (FDA). The information below is based on the first, closest match between the generic name of the drug queried and the many drugs in this database. It may not be an exact match of the drug you have in stock.
        </p>
        <p>
            <%= meta.disclaimer %>
        </p>
        <p>
            The openFDA database was last updated <strong><%= meta.last_updated %></strong>.
        </p>
    </div>

    <hr>

    <div id="druginfo">
        <h1><%= query %></h1>
        <div id="anchor-nav">
           <ul>
            <li><a href="#indications-and-use">Indications & Use</a></li>
            <li><a href="#dosage-and-administration">Dosage & Administration</a></li>
            <li><a href="#safety-and-precautions">Safety & Precautions</a></li>
            <li><a href="#children-elderly-mothers">Children, Older Patients, Pregnancy & Breastfeeding</a></li>
            <li><a href="#patient-information">Patient Information</a></li>
            <li><a href="#storage-and-handling">Storage & Handling</a></li>
           </ul>
        </div>
        
        <a class="scroll-anchor" id="indications-and-use"></a>
        <h2>Indications & Use</h2>
        <% if (drugInfo.active_ingredient || drugInfo.purpose || drugInfo.indications-and-use) { %>
            <%- drugInfo.active_ingredient %>
            <%- drugInfo.purpose %>
            <%- drugInfo.indications_and_usage %>
        <% } else { %>
            <p>No information in database.</p>
        <% } %>
        
        <a class="scroll-anchor" id="dosage-and-administration"></a>
        <h2>Dosage & Administration</h2>
        <% if (drugInfo.dosage_and_administration) { %>
            <%- drugInfo.dosage_and_administration %>
        <% } else { %>
            <p>No information in database.</p>
        <% } %>

        <a class="scroll-anchor" id="safety-and-precautions"></a>
        <h2>Safety & Precautions</h2>
        <% if (drugInfo.boxed_warning || drugInfo.warnings || drugInfo.precautions || drugInfo.do_not_use || drugInfo.stop_use || drugInfo.adverse_reactions) { %>
            <%- drugInfo.boxed_warning %>
            <%- drugInfo.warnings %>
            <%- drugInfo.precautions %>
            <%- drugInfo.do_not_use %>
            <%- drugInfo.stop_use %>
            <%- drugInfo.adverse_reactions %>
        <% } else { %>
            <p>No information in database.</p>
        <% } %>

        <a class="scroll-anchor" id="children-elderly-mothers"></a>
        <h2>Children, Older Patients, Pregnancy & Breastfeeding</h2>
        <h3>Children</h3>
            <% if (drugInfo.pediatric_use) { %>
                <%- drugInfo.pediatric_use %>
            <% } else { %>
                <p>No information in database.</p>
            <% } %>
        <h3>Older Patients</h3>
        <% if (drugInfo.geriatric_use) { %>
            <%- drugInfo.geriatric_use %>
        <% } else { %>
            <p>No information in database.</p>
        <% } %>
        <h3>Pregnancy, Childbirth, & Breastfeeding</h3>
        <% if (drugInfo.pregnancy || drugInfo.pregnancy_or_breast_feeding || drugInfo.nursing_mothers || drugInfo.labor_and_delivery) { %>
            <%- drugInfo.pregnancy %>
            <%- drugInfo.pregnancy_or_breast_feeding %>
            <%- drugInfo.nursing_mothers %>
            <%- drugInfo.labor_and_delivery %>
        <% } else { %>
            <p>No information in database.</p>
        <% } %>

        <a class="scroll-anchor" id="patient-information"></a>
        <h2>Patient Information</h2>
        <% if (drugInfo.information_for_patients || drugInfo.when_using || drugInfo.ask_doctor || drugInfo.ask_doctor_or_pharmacist) { %>
            <%- drugInfo.information_for_patients %>
            <%- drugInfo.when_using %>
            <%- drugInfo.ask_doctor %>
            <%- drugInfo.ask_doctor_or_pharmacist %>
        <% } else { %>
            <p>No information in database.</p>
        <% } %>

        <a class="scroll-anchor" id="storage-and-handling"></a>
        <h2>Storage & Handling</h2>
        <% if (drugInfo.storage_and_handling) { %>
            <%- drugInfo.storage_and_handling %>
        <% } else { %>
            <p>No information in database.</p>
        <% } %>

    </div>

<% } %>

<%- include('../partials/footer') %>