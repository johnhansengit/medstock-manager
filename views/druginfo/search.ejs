<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel=“stylesheet” href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel='stylesheet' href='/stylesheets/main.css' />

</head>

<body id="druginfo-body">
    <header id="header">

        <nav id="left-nav">
            <ul>
                <li><a href="/current">Current</a></li>
                <li><a href="/log">Ins/Outs</a></li>
            </ul>
        </nav>

        <div id="logo-container">
            <a href="../">MedStock</a> <a href="/"><img src="/images/logo.svg" alt=""></a> <a href="/">Manager</a>
        </div>

        <nav id="right-nav">
            <ul>
                <li><a href="/order">Order</a></li>
                <li><a href="/druginfo">Drug Info</a></li>
            </ul>
        </nav>

    </header>

    <main id="druginfo-main">

        <h1>Search the FDA Drug Information Database</h1>
        <form id="druginfo-form-container" action="/druginfo/search" method="GET">
            <input type="search" name="drugName" id="druginfo-searchbar" placeholder="Search...">
            <button id="druginfo-btn">Search</button>
        </div>

        <script>
            document.getElementById('druginfo-searchbar').focus()

            const drugInfoBtn = document.getElementById('druginfo-btn')
            const searchBar = document.getElementById('druginfo-searchbar')
            drugInfoBtn.addEventListener('click', () => {
                event.preventDefault();
                let drugName = searchBar.value
                window.location.href=`/druginfo/${drugName}`
            })

        </script>
    
